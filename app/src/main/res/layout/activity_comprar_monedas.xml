<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#D1C4E9"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <RelativeLayout
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/toolbar"
        android:background="#673AB7"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/backArrow"
            android:layout_width="@dimen/toolbar"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="false"
            android:layout_alignParentTop="true"
            android:layout_marginTop="0dp"
            app:srcCompat="@drawable/back_arow" />

        <TextView
            android:id="@+id/dinero"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:layout_gravity="center_horizontal"
            android:text="0$"
            android:textSize="36sp"
            android:textColor="@color/white"/>

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/texto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/toolbar"
        android:orientation="vertical">

        <TextView
            android:id="@+id/pregunta"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Te quedaste sin monedas?"
            android:textSize="30dp"
            android:textColor="@color/white"
            android:paddingTop="40dp"
            android:paddingStart="20dp"
            />

        <TextView
            android:id="@+id/conseguir"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Puedes conseguir mas !"
            android:textSize="30dp"
            android:textColor="@color/white"
            android:paddingTop="10dp"
            android:paddingStart="20dp"

            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingTop="25dp"
            >

            <TextView
                android:id="@+id/usuarioPaypal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="20dp"
                android:paddingTop="10dp"
                android:text="Registra una cuenta PayPal"
                android:textColor="@color/white"
                android:textSize="30dp"
                />
        </LinearLayout>

    </LinearLayout>

</RelativeLayout>