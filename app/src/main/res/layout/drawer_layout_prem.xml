<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/morado">


    <LinearLayout
        android:id="@+id/categorias"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/botones"
        android:orientation="vertical">

        <TextView
            android:id="@+id/Tarjetas"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Tarjetas de Regalo"
            android:textSize="35sp"
            android:onClick="goToTarjetas"
            android:background="@drawable/botones_categorias_background"
            android:layout_margin="25dp"/>

        <TextView
            android:id="@+id/Electronicos"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Electronicos"
            android:textSize="35sp"
            android:onClick="goToElectronicos"
            android:background="@drawable/botones_categorias_background"
            android:layout_margin="25dp"/>

        <TextView
            android:id="@+id/Deportivos"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Articulos Deportivos"
            android:textSize="35sp"
            android:onClick="goToDeportivos"
            android:background="@drawable/botones_categorias_background"
            android:layout_margin="25dp"/>

    </LinearLayout>

</RelativeLayout>