<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#D1C4E9">
    <RelativeLayout
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/toolbar"
        android:background="#673AB7"
        android:orientation="horizontal">
    <ImageView
        android:id="@+id/backArrow"
        android:layout_width="@dimen/toolbar"
        android:layout_height="match_parent"
        android:layout_alignParentStart="false"
        android:layout_alignParentTop="true"
        android:layout_marginTop="0dp"
        android:src="@drawable/back_arow" />

    <TextView
        android:id="@+id/dinero"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentEnd="true"
        android:layout_gravity="center_horizontal"
        android:text="0$"
        android:textSize="36sp"
        android:textColor="@color/white"/>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_below="@+id/toolbar">

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Deseas canjear este artÃ­culo por 1500 monedas?"
            android:textSize="25dp"
            android:textColor="@color/white"
            android:paddingTop="40dp"/>

        <Button
            android:id="@+id/canjear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="70dp"
            android:background="@drawable/background_botones"
            android:textSize="@dimen/title"
            android:padding="@dimen/space_lg"
            android:textColor="@color/white"
            android:text="Canjear"/>
    </LinearLayout>


</RelativeLayout>